<div class="d-flex flex-row align-items-center justify-content-between">
  <h1>All articles</h1>
    <%= link_to("âœš article", new_article_path, class: "btn btn-outline-primary btn-sm") %>
  </div>
  <ul class="list-group">
    <% @articles.each do |article| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= article.title %>
        <span>
          <span class="badge badge-light badge-pill"> <%= article.created_at %> </span>
          <%= link_to "view", article_path(article), class: 'badge badge-primary badge-pill' %>
          <%= link_to("edit", edit_article_path(article), class: "badge badge-secondary badge-pill") %>
          <%= link_to("delete", article_path(article), method: :delete, class: "badge badge-danger badge-pill", data: { confirm: "Are you sure?" }) %>
        </span>
      </li>
    <% end %>
  </ul>
